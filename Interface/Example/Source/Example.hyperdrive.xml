<?xml version="1.0" encoding="UTF-8" ?>
<Application>
    <Themes default="night">
        <day />
        <night />
    </Themes>

    <Colors>
        <themeIndependentTitle
            default="black" />

        <overlayBackground
            day="white"
            night="aNamedColor" />

        <textOnOverlay
            day="black"
            night="white" />
    </Colors>

    <Images>
        <falcon
            day="falcon_day"
            night="falcon_night" />
    </Images>

    <Fonts>
        <title default=":bold@30" />
        <custom default="Helvetica@15" />
    </Fonts>
</Application>
